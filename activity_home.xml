<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- AgriTech Logo with Animation -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"/>

        <!-- Title with Tech Font -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AGRI TECH PORTAL"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textAllCaps="true"
            android:textColor="@color/accent"
            android:fontFamily="@font/tech_mono"
            android:layout_marginBottom="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Farming Solutions"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="32dp"/>

        <!-- Feature Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agricultural Intelligence Platform"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our AI-powered platform helps farmers with:\n\n• Crop disease detection\n• Real-time weather alerts\n• Market price tracking\n• Farming logistics coordination\n• Smart irrigation control"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/text_secondary"
                    android:gravity="start"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="LOGIN"
            android:textColor="@color/primary_dark"
            android:textSize="16sp"
            app:icon="@drawable/ic_login"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_dark"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/accent"
            app:rippleColor="@color/accent_dark"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="REGISTER"
            android:textColor="@color/primary_dark"
            android:textSize="16sp"
            app:icon="@drawable/ic_signup"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_dark"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/accent_light"
            app:rippleColor="@color/accent_dark"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="EXIT"
            android:textColor="@color/error_red"
            android:textSize="16sp"
            app:icon="@drawable/ic_exit"
            app:iconGravity="textStart"
            app:iconTint="@color/text_secondary"
            app:cornerRadius="8dp"
            app:strokeColor="@color/divider"
            app:strokeWidth="1dp"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="@color/divider"/>
    </LinearLayout>
</ScrollView>